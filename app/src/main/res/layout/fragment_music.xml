<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:id="@+id/layoutPlay"
    tools:context="com.example.admin.mp3player.Fragments.MusicFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/layoutRE"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/lvList"
            android:smoothScrollbar="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ListView>

        <LinearLayout
            android:id="@+id/control"
            android:gravity="center"
            android:background="#d9d7d7"
            android:layout_marginTop="-70dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/musicPlay"
                android:layout_marginLeft="-5dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/musical" />


            <LinearLayout
                android:id="@+id/mainLayout"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name1"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:lines="1"
                    android:text="dgvsfhdfjnfgkmfhydk"
                    android:textColor="#ffffff"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/artist1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:lines="1"
                    android:text="dgvsfhdfjnfgkmfhydk"
                    android:textColor="#ffffff"
                    android:textSize="13sp" />

            </LinearLayout>

            <ImageView
                android:layout_marginLeft="-140dp"
                android:id="@+id/prev1"
                android:src="@drawable/icnotifprev"
                android:layout_width="15dp"
                android:layout_height="15dp" />

            <ImageView
                android:layout_marginLeft="35dp"
                android:id="@+id/play1"
                android:src="@drawable/icnotifplay"
                android:layout_width="15dp"
                android:layout_height="15dp" />


            <ImageView
                android:layout_marginLeft="30dp"
                android:id="@+id/next1"
                android:src="@drawable/icnotifnext"
                android:layout_width="15dp"
                android:layout_height="15dp" />


        </LinearLayout>

    </LinearLayout>

</FrameLayout>
